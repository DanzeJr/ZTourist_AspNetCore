<div id="tg-loginsingup" class="tg-loginsingup" data-vide-bg="poster: https://ztourist.blob.core.windows.net/others/signup-img.jpg" data-vide-options="position: 0% 50%">
    <div class="tg-contentarea tg-themescrollbar">
        <div class="tg-scrollbar">
            <button type="button" class="close">x</button>
            <div class="tg-logincontent">
                <nav id="tg-loginnav" class="tg-loginnav">
                    <h3>Z TOURIST</h3>
                </nav>
                @{
                    var myReturnUrl = ViewContext.HttpContext.Request.PathAndQuery();
                    if (myReturnUrl.Contains("/Account/")) // if current page is login or registration or any page related to account controller
                    {
                        myReturnUrl = "";
                    }
                }
                <div class="tg-themetabs">
                    <ul class="tg-navtbs" role="tablist">
                        <li role="presentation" class="active"><a href="#home" data-toggle="tab">Sign in</a></li>
                        <li role="presentation"><a href="#profile" data-toggle="tab">New to Z Tourist?</a></li>
                    </ul>
                    <div class="tg-tabcontent tab-content">
                        <div role="tabpanel" class="tab-pane active fade in" id="home">
                            <form class="tg-formtheme tg-formlogin" asp-controller="Account" asp-action="Login" method="post">
                                <input type="hidden" asp-for="LoginModel.ReturnUrl" value="@(ViewBag.returnUrl ?? myReturnUrl)" />
                                <fieldset>
                                    <div class="form-group">
                                        <label for="UserName">Username <sup>*</sup></label>
                                        <input class="form-control" placeholder="Username"
                                               asp-for="LoginModel.UserName" />
                                        <span asp-validation-for="LoginModel.UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Password">Password <sup>*</sup></label>
                                        <input class="form-control" placeholder="Password" type="password"
                                               asp-for="LoginModel.Password" />
                                        <span asp-validation-for="LoginModel.Password"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="tg-checkbox">
                                            <input class="form-control" type="checkbox" asp-for="LoginModel.RememberMe" />
                                            <label asp-for="LoginModel.RememberMe">Remember me</label>
                                        </div>
                                    </div>
                                    <button class="tg-btn tg-btn-lg" type="submit"><span>Sign In</span></button>
                                </fieldset>
                            </form>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="profile">
                            <form class="tg-formtheme tg-formlogin" asp-controller="Account" asp-action="SignUp" method="get">
                                <input type="hidden" asp-for="SignUpModel.ReturnUrl" value="@(ViewBag.returnUrl ?? myReturnUrl)" />
                                <fieldset>
                                    <div class="form-group">
                                        <label for="UserName">Username <sup>*</sup></label>
                                        <input class="form-control" placeholder="Username" asp-for="SignUpModel.UserName" />
                                        <span asp-validation-for="SignUpModel.UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Email <sup>*</sup></label>
                                        <input class="form-control" placeholder="example@mail.com" asp-for="SignUpModel.Email" />
                                        <span asp-validation-for="SignUpModel.Email"></span>
                                    </div>
                                    <button class="tg-btn tg-btn-lg" type="submit"><span>Sign Up</span></button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="tg-shareor"><span>or</span></div>
                <div class="tg-signupwith">
                    <h2>Sign in With...</h2>
                    <ul class="tg-sharesocialicon">
                        <li class="tg-facebook"><a asp-controller="Account" asp-action="FacebookLogin" asp-route-returnUrl="@(ViewBag.returnUrl ?? myReturnUrl)"><i class="icon-facebook-1"></i><span>Facebook</span></a></li>
                        @*<li class="tg-twitter"><a asp-controller="Account" asp-action="TwitterLogin"><i class="icon-twitter-1"></i><span>Twitter</span></a></li>*@
                        <li class="tg-googleplus"><a asp-controller="Account" asp-action="GoogleLogin" asp-route-returnUrl="@(ViewBag.returnUrl ?? myReturnUrl)"><i class="icon-google4"></i><span>Google</span></a></li>
                    </ul>
                </div>
            </div>
