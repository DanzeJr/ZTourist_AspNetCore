@model LoginModel

<div id="signin">
    <h1>Welcome Back!</h1>
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="tg-dashboardcontent">
            <div class="tg-content">
                @if (ViewContext.RouteData.Values["action"].Equals("Login"))
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size: larger; font-weight: bold"></div>
                }
                <fieldset>
                    <br />
                    <div class="form-group" style="width: 100%">
                        <label asp-for="UserName">Username<sup>*</sup></label>
                        <input class="form-control" asp-for="UserName" placeholder="Username" />
                        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                    </div>
                    <div class="form-group" style="width: 100%">
                        <label asp-for="Password">Password<sup>*</sup></label>
                        <input class="form-control" asp-for="Password" placeholder="Password" />
                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    </div>
                    <div class="form-group" style="width: 100%">
                        <div class="tg-checkbox">
                            <input class="form-control" asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <button type="submit" class="regbtn">Sign In</button>
    </form>
</div>
