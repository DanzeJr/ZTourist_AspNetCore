@model LoginSignUpModel

<div id="signin">
    <h1>Welcome Back!</h1>
    <form asp-controller="Account" asp-action="Login" method="post">
        <input type="hidden" asp-for="LoginModel.ReturnUrl" value="@ViewBag.returnUrl" />
        <div class="tg-dashboardcontent">
            <div class="tg-content">
                @if (ViewBag.Title == "Login")
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size: larger; font-weight: bold"></div>
                }
                <fieldset>
                    <br />
                    <div class="form-group" style="width: 100%">
                        <label asp-for="LoginModel.UserName">Username<sup>*</sup></label>
                        <input class="form-control" asp-for="LoginModel.UserName" placeholder="Username" />
                        <div><span asp-validation-for="LoginModel.UserName" class="text-danger"></span></div>
                    </div>
                    <div class="form-group" style="width: 100%">
                        <label asp-for="LoginModel.Password">Password<sup>*</sup></label>
                        <input class="form-control" asp-for="LoginModel.Password" placeholder="Password" />
                        <div><span asp-validation-for="LoginModel.Password" class="text-danger"></span></div>
                    </div>
                    <div class="form-group" style="width: 100%">
                        <div class="tg-checkbox">
                            <input class="form-control" asp-for="LoginModel.RememberMe" />
                            <label asp-for="LoginModel.RememberMe"></label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <button type="submit" class="regbtn">Sign In</button>
    </form>
</div>
