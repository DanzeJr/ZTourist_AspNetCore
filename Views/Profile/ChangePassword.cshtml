@model PasswordModel

@{
    ViewData["Title"] = "Change Password";
}

@section JS {
    <script>
        $("#tg-main").attr("class", "tg-main tg-sectionspace tg-haslayout");
    </script>
}

@section Slider {
    <!--************************************
                        Inner Banner Start
        *************************************-->
    <section class="tg-parallax tg-innerbanner" data-appear-top-offset="100" data-parallax="scroll" data-image-src="https://ztourist.blob.core.windows.net/others/banner.png">
        <div class="tg-sectionspace tg-haslayout">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h1>Change Password</h1>
                        <h2>@User.Identity.Name</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--************************************
                    Inner Banner End
    *************************************-->
}
<div class="container">
    <div class="row">
        <div id="tg-twocolumns" class="tg-twocolumns">
            <form class="tg-formtheme tg-formdashboard" asp-controller="Profile" asp-action="ChangePassword" method="post">
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                    <aside id="tg-sidebar" class="tg-sidebar">
                        <div class="tg-widget tg-widgetdashboard">
                            <div class="tg-widgettitle">
                                <h3>My Account</h3>
                            </div>
                            <div class="tg-widgetcontent">
                                <ul>
                                    <li><a asp-controller="Profile" asp-action=""><i class="icon-user"></i><span>Dashboard</span></a></li>
                                    <li><a asp-controller="Profile" asp-action="Edit"><i class="icon-pen2"></i><span>Edit Profile</span></a></li>
                                    <li class="selected"><a asp-controller="Profile" asp-action="ChangePassword"><i class="icon-lock-open3"></i><span>Change Password</span></a></li>
                                    <li><a asp-controller="Order" asp-action=""><i class="icon-basket3"></i><span>Order History</span></a></li>
                                    <li><a asp-controller="Account" asp-action="Logout"><i class="icon-lock"></i><span>Sign Out</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </aside>
                </div>
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                    <div id="tg-content" class="tg-content">
                        <div class="tg-dashboard">
                            <div class="tg-box tg-changepassword">
                                <div class="tg-heading">
                                    <h3>Change Password</h3>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-center text-danger" style="margin: 5% 0; font-size: larger; font-weight: bold"></div>
                                <div class="tg-dashboardcontent">
                                    <div class="tg-content">
                                        <fieldset>
                                            <div class="form-group">
                                                <label asp-for="CurrentPassword">Current Password<sup>*</sup></label>
                                                <input class="form-control" asp-for="CurrentPassword" placeholder="Old Password" />
                                                <div><span asp-validation-for="CurrentPassword" class="text-danger"></span></div>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="NewPassword">New Password<sup>*</sup></label>
                                                <input class="form-control" asp-for="NewPassword" placeholder="New Password" />
                                                <div><span asp-validation-for="NewPassword" class="text-danger"></span></div>
                                            </div>
                                            <div class="form-group" style="float: right">
                                                <label asp-for="ConfirmNewPassword">Confirm New Password<sup>*</sup></label>
                                                <input class="form-control" asp-for="ConfirmNewPassword" placeholder="Confirm Password" />
                                                <div><span asp-validation-for="ConfirmNewPassword" class="text-danger"></span></div>
                                            </div>
                                            <button class="tg-btn" type="submit"><span>update password</span></button>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
